<% if current_user.candidates.empty? %>
  <h3>No candidates yet.</h3>
<% else %>
  <h2>Your Candidates</h2>
  <h3>Compare Contributions Over Election Cycle</h3>

  <% @candidates.each do |candidate| %>
    <li><%= link_to candidate.name, candidate_path(candidate) %> (<%= candidate.year %> <%= candidate.office %> Race)
    <%= link_to "Unfollow", candidate_path(candidate), method: "delete", class: "btn btn-default gray-btn" %></li>
    <span class="contributions">
      
    </span>

    <%= metrics_graphic_for Candidate.create_date_hash(candidate.contributions), target: '.contributions', title: "", description: "This graphic shows a time-series of contributions.", width: 600, height: 250, x_accessor: 'date', y_accessor: 'value', time_format: '%Y-%m-%d' %>
  <% end %> 
<% end %>
