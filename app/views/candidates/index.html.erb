<div class="container">
  <div class='example'>
    <div class="title">
      <h1>Start Exploring Campaign Finance in WA State</h1>
    </div>
    <h4><span id="found" class="label label-default"><%= fa_icon "book" %></span></h4>
    <table id="stream_table" class='table table-striped table-bordered'>
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Office</th>
          <th data-sort="raised:desc">Raised (*)</th>
          <th>Spent</th>
          <th>Election Year</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
    <div id="summary"><div>
  </div>
</div>

<script id="template" type="text/html">
  <tr>
    <td>{{index}}</td>
    <td id="name">
        <a href="/candidates/{{record.id}}">{{record.name}}</a>
    </td>
    <td>{{record.office}}</td>
    <td><%= number_to_currency("{{record.raised}}") %></td>
    <td><%= number_to_currency("{{record.spent}}") %></td>
    <td>{{record.year}}</td>
  </tr>
</script>
