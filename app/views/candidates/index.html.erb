<div class="container">
  <div class='example'>
    <div class="title">
      <h2>Start Exploring Campaign Finance in WA State</h2>
    </div>
    <h4><span id="found" class="label label-default"><%= fa_icon "book" %></span></h4>
    <table id="stream_table" class='table table-striped table-bordered'>
      <thead>
        <tr>
          <th>#</th>
          <th data-sort="name:asc">Name (sort)</th>
          <th data-sort="office:desc">Office (sort)</th>
          <th data-sort="raised:desc">Raised (sort)</th>
          <th data-sort="sepnt:desc">Spent (sort)</th>
          <th data-sort="year:desc">Election Year (sort)</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
    <div id="summary"><div>
  </div>
</div>

<script id="template" type="text/html">
  <tr>
    <td>{{index}}</td>
    <td id="name">
        <a href="/candidates/{{record.id}}">{{record.name}}</a>
    </td>
    <td>{{record.office}}</td>
    <td><%= number_to_currency("{{record.raised}}") %></td>
    <td><%= number_to_currency("{{record.spent}}") %></td>
    <td>{{record.year}}</td>
  </tr>
</script>
