<div class="row">
  <h1>Lights On Washington</h1>
  <h4>Explore campaign finance in Washington State.</h4>

  <input type="text" class=" search-query form-control" placeholder="Search candidates" />
  <span class="input-group-btn">
    <button class="btn" type="button">
      <%= fa_icon "search" %>
    </button>
  </span>

  <ul>
    <% @candidates.each do |cand| %>
      <% if cand.name.split(" ").length > 2 %>
        <li><%= link_to cand.name.split(" ")[1].titlecase + " " + cand.name.split(" ")[0].titlecase, candidate_path(cand.id) %> (<%= cand.year %>)</li>
      <% elsif cand.name.split(" ").length == 2 %>
        <li><%= cand.name.reverse.titlecase %> (<%= cand.year %>)</li>
      <% end %>
    <% end %> 
  </ul>
</div>