<h3 style="text-align: center">Search all <%= @candidate.name %> Expenditures</h3>
<br>
<table id="stream_table" class='table table-responsive table-striped table-bordered table-condensed'>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th data-sort="amount:desc">Amount <%= fa_icon "sort" %></th>
      <th data-sort="date:desc">Date <%= fa_icon "sort" %></th>
      <th>City</th>
      <th>State</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<div id="summary"><div>

<script id="template" type="text/html">
  <tr>
    <td>{{index}}</td>
    <td>{{record.name}}</td>
    <td class="col-sm-1">{{record.money_amount}}</td>
    <td class="col-sm-1">{{record.date}}</td>
    <td>{{record.city}}</td>
    <td>{{record.state}}</td>
    <td class="col-sm-3">{{record.description}}</td>
  </tr>
</script>