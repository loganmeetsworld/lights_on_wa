<h3 style="text-align: center">Search all <%= @candidate.name %> Contributions</h3>
<br>
<table id="stream_table" class='table table-responsive table-striped table-bordered table-condensed'>
  <thead>
    <tr>
      <th>#</th>
      <th data-sort="name:asc">Name (sort)</th>
      <th data-sort="amount:desc">Amount (sort)</th>
      <th data-sort="date:desc">Date (sort)</th>
      <th>Employer</th>
      <th>Occupation</th>
      <th>City</th>
      <th>State</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<div id="summary"><div>

<script id="template" type="text/html">
  <tr>
    <td>{{index}}</td>
    <td>{{record.name}}</td>
    <td><%= number_to_currency "{{record.amount}}" %></td>
    <td class="col-sm-1">{{record.date}}</td>    
    <td>{{record.employer}}</td>
    <td>{{record.occupation}}</td>
    <td>{{record.city}}</td>
    <td>{{record.state}}</td>
    <td class="col-sm-3">{{record.description}}</td>
  </tr>
</script>